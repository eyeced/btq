<div class="row">
  <div class="span10 offset1">
    <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-horizontal well' }) do |f| %>
      <fieldset>
        <legend>Forgot your password</legend>
        <%= devise_error_messages! %>
        <%= f.input :email %>
        <div class="form-actions"><%= f.submit "Reset password", :class => 'btn btn-primary' %></div>
      </fieldset>
    <% end %>
  </div>
</div>
