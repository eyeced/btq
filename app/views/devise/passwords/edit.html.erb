<div class="row">
  <div class="span10 offset1">
    <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'form-horizontal well' }) do |f| %>
      <fieldset>
        <legend>Change your password</legend>
        <%= devise_error_messages! %>
        <%= f.input :reset_password_token, :as => :hidden %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
        <div class="form-actions"><%= f.submit "Change my password", :class => 'btn btn-primary' %></div>
      </fieldset>
    <% end %>
  </div>
</div>
