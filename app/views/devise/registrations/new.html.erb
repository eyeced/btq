<div class="row">
  <div class="span10 offset1">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal well' }) do |f| %>
      <fieldset>
        <legend>User Sign Up</legend>
        <%= f.input :name %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
        <div class="control-group">
          <div class="controls"><%= render "links" %></div>
        </div>
        <div class="form-actions"><%= f.submit "Sign up", :class => 'btn btn-primary' %></div>
      </fieldset>
    <% end %>
  </div>
</div>
