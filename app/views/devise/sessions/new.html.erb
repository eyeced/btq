<div class="row">
  <div class="span10 offset1">
    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal well' }) do |f| %>
      <fieldset>
        <legend>Sign In</legend>
        <%= devise_error_messages! %>

        <%= f.input :email %>
        <%= f.input :password %>
        <% if devise_mapping.rememberable? -%>
          <div class="control-group">
            <div class="controls">
              <label class="checkbox"><%= f.check_box :remember_me %> Remember Me</label>
            </div>
          </div>
        <% end -%>
        <div class="control-group">
          <div class="controls"><%= render "links" %></div>
        </div>
        <div class="form-actions"><%= f.submit "Sign in", :class => 'btn btn-primary' %></div>
      </fieldset>
    <% end %>
  </div>
</div>
