<div class="row">
  <div class="span10 offset1">
    <%= form_tag sessions_path, :method => :post, :class => 'form-horizontal well' do %>
      <fieldset>
        <legend>Log In</legend>
        <div class="control-group">
          <%= label_tag :email, nil, :class => 'control-label' %>
          <div class="controls">
            <%= text_field_tag :email, params[:email], :class => 'text-field' %>
          </div>
        </div>
        <div class="control-group">
          <%= label_tag :password, nil, :class => 'control-label' %>
          <div class="controls">
            <%= password_field_tag :password, :class => 'text-field' %>
          </div>
        </div>
        <p><%= link_to "forgotten password?", new_password_reset_path %></p>
        <div class="form-actions"><%= submit_tag "Login", :class => 'btn btn-primary' %></div>
      </fieldset>
    <% end %>
  </div>
</div>
