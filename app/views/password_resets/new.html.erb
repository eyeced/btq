<div class="row">
  <div class="span10 offset1">
    <%= form_tag password_resets_path, :method => :post, :class => 'form-horizontal well' do %>
      <fieldset>
        <legend>Forgot Password</legend>
        <div class="control-group">
          <%= label_tag :email, nil, :class => 'control-label' %>
          <div class="controls">
            <%= text_field_tag :email, params[:email], :class => 'text-field' %>
          </div>
        </div>
        <div class="form-actions"><%= submit_tag "Reset Password", :class => 'btn btn-primary' %></div>
      </fieldset>
    <% end %>
  </div>
</div>
