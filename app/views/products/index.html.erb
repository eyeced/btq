<%- model_class = Product.new.class -%>
<div class="row">
  <div class="span3">
    <div class="well">
      <ul class="nav nav-list">
        <li class="nav-header">Categories<li>
        <% @categories.each do |category| %>
          <li><%= link_to "#{category.name}", :controller => "products", :query => "#{category.name}" %></li>
        <% end %>
        <li class="nav-header">Trends</li>
        <% @trends.each do |trend| %>
          <li><%= link_to trend.name, :controller => "products", :query => trend.name %></li>
        <% end %>

      </ul>
    </div>
  </div>
  <div class="span9">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
    <%= render :partial => "products/list", :locals => {:products => @products} %>
  </div>
</div>

